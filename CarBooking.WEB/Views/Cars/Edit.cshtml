@model CarBooking.DAL.Entities.Car

@{
    ViewBag.Title = "Edit";
}

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(car => car.ID)

        <div class="form-group">
            @Html.LabelFor(car => car.CarTitle)
            @Html.EditorFor(car => car.CarTitle, new { htmlAttributes = new { @class = "form-control" } })
            <span id="car-title-error" class="error-message"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(car => car.Price)
            @Html.EditorFor(car => car.Price, new { htmlAttributes = new { @class = "form-control" } })
            <span id="price-error" class="error-message"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(car => car.ImagePath)
            @Html.EditorFor(car => car.ImagePath, new { htmlAttributes = new { @class = "form-control" } })
            <span id="image-path-error" class="error-message"></span>
        </div>

        <div class="form-group">
                @Html.LabelFor(car => car.IsLuxury, new { @class = "form-check-label"})
                @Html.EditorFor(car => car.IsLuxury)
        </div>

        <input type="submit" class="btn btn-primary form-submit-button" value="OK" />
    }

        <div>
            @Html.ActionLink("Back to List", "GetAll", null, new { @class = "btn btn-link" })
        </div>

<script src="~/MyScripts/carDataValidation.js"></script>